/**
 * global - "?" 点击了解详情
 */

.tips {
    position: relative;
    text-align: left;
    width: 100%;
    z-index: 999;
    .tips-handler {
        font-size: 16px;
        text-align: right;
        position: absolute;
        cursor: pointer;
        &:before {
            color: #fff;
            background-color: #428bca;
            border-radius: 50%;
            border-left: 1px solid #428bca;
            border-right: 1px solid #428bca;
        }
    }
    .tips-content {
        position: absolute;
        padding: 20px;
        background-color: white;
        border-radius: 6px;
        box-shadow: 1px -1px 6px rgba(0, 0, 0, 0.07), -1px -1px 6px rgba(0, 0, 0, 0.07), 1px 0 6px rgba(0, 0, 0, 0.07), -1px 1px 11px rgba(0, 0, 0, 0.17), 1px 1px 6px rgba(0, 0, 0, 0.07), -1px 0 6px rgba(0, 0, 0, 0.07);
        width: 180px;
        color: #999;
        p {
            line-height: 20px;
            margin-bottom: 20px;
        }
        .tit,
        .tit-2 {
            line-height: 1;
            margin-bottom: 9px;
            color: #4c4743;
        }
        .tit-2 {
            line-height: 20px;
        }
    }
    &.tips1 {
        .tips-handler {
            right: 20px;
            top: -18px;
        }
        .tips-content {
            top: 10px;
            right: 20px;
        }
    }
}


/**
 * 建模列表 svg布局
 */

.createModel-list-chart {
    .chart {
        margin-top: 15px;
        .item,
        .item-2 {
            margin-bottom: 15px;
            @include gallery(3 of 12);
            &:hover {
                outline: 2px solid #dce4ec;
            }
        }
        .item-2 {
            @include gallery(4 of 12);
        }
        .inner {
            margin: 0;
            height: 160px;
            background-color: #fff;
            padding-left: 20px;
            padding-top: 28px;
            border-left: 1px solid #eee;
            border-right: 1px solid #eee;
            border-bottom: 1px solid #dcdbdb;
            cursor: pointer;
            border-radius: 3px;
        }
        .content {
            line-height: 1;
            float: left;
            width: 50%;
        }
        .title-1,
        .title-2 {
            font-weight: normal;
            color: nth($font-color, 1);
        }
        .title-1 {
            height: 40px;
            overflow: hidden;
            width: 100%;
            font-size: 16px;
            margin-bottom: 10px;
            line-height: 20px;
            text-overflow: ellipsis;
        }
        .title-2 {
            font-size: 24px;
            margin-bottom: 8px;
        }
        .text {
            color: #ccc;
            font-size: 12px;
        }
        .svg {
            text-align: center;
            float: right;
            margin-right: 20px;
        }
    }
    .table-page {
        border: none;
        padding: 0;
    }
    @at-root {
        @media (max-width: 1340px) {
            .createModel-list-chart {
                .chart {
                    .item {
                        @include gallery(4 of 12);
                    }
                }
            }
        }
        @media (max-width: 1070px) {
            .createModel-list-chart {
                .chart {
                    .item {
                        @include gallery(6 of 12);
                    }
                }
            }
        }
        //搜索，建模列表搜索
        .module-search {
            width: 255px;
            margin-top: -1px;
            .search-text {
                float: left;
                width: 210px;
                input {
                    border: none;
                }
            }
            .search-btn {
                width: 35px;
                float: right;
                button {
                    border: none;
                    height: 31px;
                }
            }
            .form-control {
                height: 31px;
            }
        }
        //建模列表顶部
        .createModel-list-header {
            line-height: 31px;
            overflow: hidden;
            .tab-handler {
                display: inline-block;
                a {
                    display: inline-block;
                    width: 50px;
                    height: 31px;
                    color: #333;
                    background-color: #fff;
                    text-align: center;
                    &.active {
                        color: #fff;
                        background-color: #428bca;
                        &:hover {
                            color: #fff;
                        }
                    }
                    &:hover {
                        color: #428bca;
                    }
                    &:first-child {
                        border-top-left-radius: 2px;
                        border-bottom-left-radius: 2px;
                    }
                    &:last-child {
                        border-top-right-radius: 2px;
                        border-bottom-right-radius: 2px;
                    }
                }
            }
            .create {
                text-align: right;
            }
        }
    }
}
