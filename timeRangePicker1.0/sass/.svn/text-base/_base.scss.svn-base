/**
 * global- 导航收起
 */

.navigator-side {
    width: 240px;
    background-color: #1d2939;
    position: fixed;
    left: 0;
    top: 60px;
    bottom: 0;
    z-index: $z-index+40;
    padding-left: 15px;
    padding-right: 15px;
    .item-1 {
        color: #95a0aa;
        display: block;
        padding-left: 13px;
        height: 36px;
        line-height: 36px;
        text-decoration: none;
        position: relative;
        border-radius:3px;
        i.fa {
            padding-right: 10px;
            width: 30px;
        }
        &:hover {
            color: lighten(#798994, 20%);
        }
    }
    .normal {
        position: relative;
        clear: both;
        margin-bottom: 10px;
        &.active .item-1 {
            background-color: #1a2022;
            border-left: 4px #428bca solid;
            color: #fff;
        }
    }
    .lv-1 {
        position: relative;
        clear: both;
        margin-bottom: 10px;
        &:after {
            content: '\f105';
            display: inline-block;
            font: normal normal normal 14px/1 FontAwesome;
            font-size: inherit;
            text-rendering: auto;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
            font-size: 20px;
            color: #55686d;
            position: absolute;
            top: 7px;
            right: 15px;
        }
    }
    .lv-1.active {
        .item-1 {
            background-color: nth($theme-color, 1);
            color: #fff;
            i.fa.right {
                color: #798994;
            }
            &:hover {
                color: #fff;
            }
        }
        &:after {
            content: '\f106';
        }
    }
    .lv-1.active .lv-2 {
        display: block;
    }
    .lv-2 {
        display: none;
    }
    .item-2 {
        display: block;
        height: 36px;
        line-height: 36px;
        padding-left: 40px;
        margin-top: 10px;
        margin-bottom: 10px;
        color: #798994;
        &:hover,
        &.active {
            color: nth($theme-color, 1);
        }
        i.fa {
            display: none;
        }
    }
    .avatar {
        padding: 18px 30px;
        color: #798994;
        font-size: 12px;
        img,
        div {
            float: left;
        }
        div {
            font-style: italic;
            margin-top: 10px;
            margin-left: 10px;
        }
        span {
            display: block;
            font-weight: bold;
            font-style: normal;
            font-size: 14px;
        }
    }
    i.fa.right {
        position: absolute;
        right: 0px;
        top: 0px;
        height: 45px;
        line-height: 45px;
        padding-right: 0;
    }
    i.fa.fa-desktop {
        font-size: 1.2em;
    }
    i.fa.fa-cog {
        font-size: 1.5em;
    }
}


/**
 * global- 导航展开
 */

body.nav-open{
    .navigator-side {
        width: 50px;
        padding:0;
        .avatar,
        .fa.right {
            display: none;
        }
        .lv-1,
        .normal {
            width: 50px;
            height: 50px;
            padding: 5px;
            &:after {
                content: '';
            }
        }
        .lv-2 {
            position: absolute;
            left: 50px;
            top: 45px;
            width: 125px;
            background-color: #242b31;
            border-bottom-right-radius: 5px;
            display: none;
        }
        .item-1 {
            padding-left: 0px;
            border: none;
            line-height: 1;
            width: 40px;
            height: 40px;
            line-height: 40px;
            border-radius: 3px;
            display: block;
            >span.name {
                font-size: 0;
            }
            >i.fa:first-child {
                padding-right: 0;
                width: 40px;
                text-align: center;
            }
        }
        .item-2 {
            padding-left: 10px;
            height: 35px;
            line-height: 35px;
            i.fa {
                padding-right: 5px;
                display: inline-block;
            }
        }
        .lv-1.active {
            .lv-2 {
                display: none;
            }
        }
        .lv-1.active,
        .lv-1.open {
            .item-1 {
                border: none;
                background-color: nth($theme-color,1);
                color: #fff;
            }
        }
        .lv-1.open {
            .item-1 {
                width: 170px;
                border-bottom-right-radius: 0px;
                >i.fa {}
                >span.name {
                    font-size: 14px;
                    padding-left: 15px;
                }
            }
            .lv-2 {
                display: block;
            }
        }
    }
    .main {
        padding-left: 50px !important;
    }

    // 展开收起导航按钮
    #J-navSide-show {
        cursor: pointer;
        background-color: #f1f1f1;
        text-align: center;
        width: 52px;
        height: 52px;
        line-height: 52px;
        font-size: 16px;
    }
    #J-navSide-hide {
        cursor: pointer;
    }
    #J-navSide-show,
    #J-navSide-hide {
        &:hover {
            color: nth($theme-color, 1);
        }
    }
}


