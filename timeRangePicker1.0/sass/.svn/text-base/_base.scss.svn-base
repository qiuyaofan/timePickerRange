/**
 * global - 全局提示
 */

#global-tip {
    position: fixed;
    margin-top: -30px;
    top: 50%;
    left: 0;
    width: 100%;
    text-align: center;
    box-sizing: border-box;
    z-index: $z-index +110;
    span {
        background-color: rgba(0, 0, 0, .75);
        padding: 15px;
        color: #fff;
        border-radius: 5px;
    }
    span:before {
        font: normal 26px/1 FontAwesome;
        text-rendering: auto;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        margin-right: 10px;
        position: relative;
        top: 3px;
    }
    span.success:before {
        content: '\f05d';
    }
    span.error:before {
        content: '\f071';
    }
}


